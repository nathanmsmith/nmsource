<style>
  .split-screen-section {
    position: relative;
    width: 100vw;
    min-height: 100vh;
    margin-left: calc(-50vw + 50%);
    display: flex;
    background: #040D12;
  }

  .split-left,
  .split-right {
    width: 50%;
    height: 100vh;
    position: sticky;
    top: 0;
  }

  .split-left {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 4rem;
  }

  .hua-methodology {
    font-size: 2rem;
  }

  .hua-methodology li {
    opacity: 0;
  }

  .hua-methodology li.visible {
    animation: fadeIn 2s ease-out forwards;
  }

  .split-right {
    overflow: hidden;
    position: relative;
  }

  .split-video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  @media (max-width: 1024px) {
    .split-screen-section {
      flex-direction: column;
    }

    .split-left,
    .split-right {
      width: 100%;
      position: relative;
    }

    .split-left {
      min-height: 100vh;
      padding: 2rem;
    }

    .split-right {
      height: 60vh;
    }
  }
</style>

<script>
  // Scroll animation for checklist items
  function initChecklistAnimation() {
    const checklistItems = document.querySelectorAll('.hua-methodology li');

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry, index) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        }
      });
    }, {
      threshold: 1,
      rootMargin: '-100px -100px -100px -100px'
    });

    checklistItems.forEach(item => {
      observer.observe(item);
    });
  }

  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initChecklistAnimation);
  } else {
    initChecklistAnimation();
  }
</script>
