<style>
  .split-screen-section {
    width: 100vw;
    min-height: 100vh;
    margin-left: calc(-50vw + 50%);
    display: flex;
  }

  .split-left {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hua-methodology {
    margin: 4rem;
    font-size: 2rem;
    font-weight: bold;
  }

  .hua-methodology li {
    opacity: 0;
  }

  .hua-methodology :is(li+li,li :is(ul,ol)) {
    margin-top: 16px;
  }

  .hua-methodology li.visible {
    animation: fadeIn 2s ease-out forwards;
  }

  .split-video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  #hua-vid-1 {
    object-position: 40% 50%;
  }

  #hua-quote-2 {
    margin: 5rem;
  }

  @media (min-width: 1280px) {
    .split-left,
    .split-right {
      width: 50%;
      height: 100vh;
      position: sticky;
      top: 0;
    }
  }

  @media (max-width: 1280px) {
    .hua-methodology {
      font-size: 17px;
      font-weight: bold;
      margin: 0rem;
    }

    .split-screen-section {
      flex-direction: column;
    }

    .split-left {
      min-height: 100vh;
      padding: 2rem;
      margin-bottom: 2rem;
    }

    .split-right {
      height: 60vh;
    }
  }
</style>

<script>
  // Scroll animation for checklist items
  function initChecklistAnimation() {
    const checklistItems = document.querySelectorAll('.hua-methodology li');

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry, index) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        }
      });
    }, {
      root: document,
      threshold: 1,
      rootMargin: '100px 0px -100px'
    });

    checklistItems.forEach(item => {
      observer.observe(item);
    });
  }

  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initChecklistAnimation);
  } else {
    initChecklistAnimation();
  }
</script>
