<style>
  .psychosis-container {
    position: relative;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    background: #040D12;
    z-index: 1;

    display: flex;
    align-items: center;
    justify-content: center;
  }

  .psychosis-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background:
      conic-gradient(from 0deg at 50% 50%,
        rgba(24, 61, 61, 0.5) 0deg,
        rgba(92, 131, 116, 0.4) 72deg,
        rgba(147, 177, 166, 0.3) 144deg,
        rgba(24, 61, 61, 0.5) 216deg,
        rgba(92, 131, 116, 0.4) 288deg,
        rgba(24, 61, 61, 0.5) 360deg),
      radial-gradient(ellipse at 50% 50%, transparent 0%, rgba(4, 13, 18, 0.8) 100%);
  }

  .glitch-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: repeating-linear-gradient(
      0deg,
      rgba(24, 61, 61, 0.03) 0px,
      rgba(92, 131, 116, 0.02) 1px,
      rgba(147, 177, 166, 0.03) 2px,
      transparent 3px,
      transparent 4px
    );
    animation: glitch-scan 0.3s linear infinite;
    pointer-events: none;
  }

  .floating-shapes {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .shape {
    position: absolute;
    opacity: 0.6;
    filter: blur(3px);
    border-radius: 50%;
    left: 50%;
    top: 50%;
  }

  .shape:nth-child(1) {
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, rgba(24, 61, 61, 0.6), transparent);
    animation: orbit-shape 6s linear infinite;
    transform-origin: -150px 0;
  }

  .shape:nth-child(2) {
    width: 200px;
    height: 200px;
    background: radial-gradient(circle, rgba(92, 131, 116, 0.6), transparent);
    animation: orbit-shape 5s linear infinite;
    animation-delay: -1.5s;
    transform-origin: -200px 0;
  }

  .shape:nth-child(3) {
    width: 250px;
    height: 250px;
    background: radial-gradient(circle, rgba(147, 177, 166, 0.5), transparent);
    animation: orbit-shape 7s linear infinite;
    animation-delay: -3.5s;
    transform-origin: -180px 0;
  }

  .shape:nth-child(4) {
    width: 180px;
    height: 180px;
    background: radial-gradient(circle, rgba(92, 131, 116, 0.5), transparent);
    animation: orbit-shape 5.5s linear infinite;
    animation-delay: -2.5s;
    transform-origin: -250px 0;
  }

  .shape:nth-child(5) {
    width: 220px;
    height: 220px;
    background: radial-gradient(circle, rgba(147, 177, 166, 0.5), transparent);
    animation: orbit-shape 6.5s linear infinite;
    animation-delay: -1s;
    transform-origin: -160px 0;
  }

  .shape:nth-child(6) {
    width: 160px;
    height: 160px;
    background: radial-gradient(circle, rgba(24, 61, 61, 0.6), transparent);
    animation: orbit-shape 4.5s linear infinite;
    animation-delay: -3s;
    transform-origin: -220px 0;
  }

  .shape:nth-child(7) {
    width: 280px;
    height: 280px;
    background: radial-gradient(circle, rgba(92, 131, 116, 0.4), transparent);
    animation: orbit-shape 7.5s linear infinite;
    animation-delay: -4s;
    transform-origin: -140px 0;
  }

  .shape:nth-child(8) {
    width: 190px;
    height: 190px;
    background: radial-gradient(circle, rgba(147, 177, 166, 0.6), transparent);
    animation: orbit-shape 5.5s linear infinite;
    animation-delay: -2s;
    transform-origin: -190px 0;
  }

  .distortion-layer {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image:
      repeating-radial-gradient(circle at 30% 30%, transparent 0, transparent 10px, rgba(255, 255, 255, 0.03) 10px, rgba(255, 255, 255, 0.03) 20px);
    animation: distortion-rotate 15s linear infinite;
    mix-blend-mode: overlay;
  }

  .title-container {
    margin: 0 2rem;
    z-index: 10;
    text-align: center;
    color: #C5E4D8;
    text-shadow:
      0 0 10px rgba(92, 131, 116, 0.8),
      0 0 20px rgba(147, 177, 166, 0.6),
      0 0 30px rgba(24, 61, 61, 0.4),
      3px 3px 0 rgba(24, 61, 61, 0.4),
      -3px -3px 0 rgba(92, 131, 116, 0.4);
    animation: title-glitch 5s ease-in-out infinite;
    letter-spacing: 0.1em;
  }

  .psychosis-title {
    font-size: 6rem;
    font-weight: 900;
    text-transform: uppercase;
  }

  .psychosis-subtitle {
    font-size: 20px;
  }

  .scroll-button {
    font-size: 14px;
    margin-top: 3rem;
    padding: 1rem 2rem;
    background: rgba(92, 131, 116, 0.2);
    border: 2px solid rgba(147, 177, 166, 0.6);
    border-radius: 50px;
    color: #93B1A6;
    font-size: 1rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow:
      0 0 20px rgba(92, 131, 116, 0.4),
      inset 0 0 20px rgba(147, 177, 166, 0.1);
    animation: button-pulse 3s ease-in-out infinite;
  }

  .scroll-button:hover {
    background: rgba(92, 131, 116, 0.4);
    border-color: rgba(147, 177, 166, 0.9);
    box-shadow:
      0 0 30px rgba(92, 131, 116, 0.8),
      inset 0 0 30px rgba(147, 177, 166, 0.2);
    transform: translateY(-2px);
  }

  @keyframes button-pulse {
    0%, 100% {
      box-shadow:
        0 0 20px rgba(92, 131, 116, 0.4),
        inset 0 0 20px rgba(147, 177, 166, 0.1);
    }
    50% {
      box-shadow:
        0 0 30px rgba(92, 131, 116, 0.6),
        inset 0 0 30px rgba(147, 177, 166, 0.2);
    }
  }

  @media (max-width: 1280px) {
    .psychosis-title {
      font-size: 36px;
      word-break: keep-all;
    }
  }

  @keyframes glitch-scan {
    0% {
      transform: translateY(0);
    }
    100% {
      transform: translateY(4px);
    }
  }

  @keyframes orbit-shape {
    0% {
      transform: rotate(0deg) scale(1);
      opacity: 0.6;
    }
    25% {
      opacity: 0.8;
      transform: rotate(90deg) scale(1.2);
    }
    50% {
      opacity: 0.5;
      transform: rotate(180deg) scale(0.9);
    }
    75% {
      opacity: 0.7;
      transform: rotate(270deg) scale(1.1);
    }
    100% {
      transform: rotate(360deg) scale(1);
      opacity: 0.6;
    }
  }

  @keyframes distortion-rotate {
    0% {
      transform: rotate(0deg) scale(1);
    }
    50% {
      transform: rotate(180deg) scale(1.3);
    }
    100% {
      transform: rotate(360deg) scale(1);
    }
  }

  @keyframes title-glitch {
    0%, 90%, 100% {
      transform: translate(0, 0) skew(0deg);
      filter: hue-rotate(0deg);
    }
    92% {
      transform: translate(-5px, 2px) skew(-2deg);
      filter: hue-rotate(90deg);
    }
    94% {
      transform: translate(5px, -2px) skew(2deg);
      filter: hue-rotate(-90deg);
    }
    96% {
      transform: translate(-2px, -3px) skew(1deg);
      filter: hue-rotate(180deg);
    }
  }

  .header-caption {
    margin-top: 0;
    text-align: right;
    margin-right: 1rem;
    margin-bottom: 2rem;
  }
</style>

<div>
<figure>
<header class="psychosis-container">
  <div class="psychosis-bg"></div>
  <div class="glitch-overlay"></div>
  <div class="floating-shapes">
    <div class="shape"></div>
    <div class="shape"></div>
    <div class="shape"></div>
    <div class="shape"></div>
    <div class="shape"></div>
    <div class="shape"></div>
    <div class="shape"></div>
    <div class="shape"></div>
  </div>
  <div class="distortion-layer"></div>

  <hgroup class="title-container">
    <h1 class="psychosis-title">{{title}}</h1>
    <p class="psychosis-subtitle">{{custom_excerpt}}</p>
    <button class="scroll-button" onclick="enterPsychosis()">
      Enter
    </button>
  </hgroup>
</header>
<figcaption class="header-caption">
  Animation by Nathan Smith and Claude
</figcaption>
</figure>

<script>
  function enterPsychosis() {
    // Scroll to content
    window.scrollTo({ top: window.innerHeight, behavior: 'smooth' });

    // Unlock audio playback for later use
    window.audioUnlocked = true;

    // Prime all audio elements so they can autoplay later
    document.querySelectorAll('audio').forEach(audio => {
      audio.play().catch(() => {});
      audio.pause();
      audio.currentTime = 0;
    });
  }
</script>
