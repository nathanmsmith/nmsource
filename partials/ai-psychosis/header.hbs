<style>
  .psychosis-container {
    position: relative;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    background: #040D12;
    z-index: 1;
    margin-bottom: 2rem;

    display: flex;
    align-items: center;
    justify-content: center;
  }

  .psychosis-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background:
      conic-gradient(from 0deg at 50% 50%,
        rgba(24, 61, 61, 0.5) 0deg,
        rgba(92, 131, 116, 0.4) 72deg,
        rgba(147, 177, 166, 0.3) 144deg,
        rgba(24, 61, 61, 0.5) 216deg,
        rgba(92, 131, 116, 0.4) 288deg,
        rgba(24, 61, 61, 0.5) 360deg),
      radial-gradient(ellipse at 50% 50%, transparent 0%, rgba(4, 13, 18, 0.8) 100%);
    animation: psychosis-spiral 6s linear infinite, psychosis-pulse 10s ease-in-out infinite;
  }

  .glitch-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: repeating-linear-gradient(
      0deg,
      rgba(24, 61, 61, 0.03) 0px,
      rgba(92, 131, 116, 0.02) 1px,
      rgba(147, 177, 166, 0.03) 2px,
      transparent 3px,
      transparent 4px
    );
    animation: glitch-scan 0.3s linear infinite;
    pointer-events: none;
  }

  .floating-shapes {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .shape {
    position: absolute;
    opacity: 0.6;
    filter: blur(3px);
    animation: float-shape 20s ease-in-out infinite;
    border-radius: 50%;
  }

  .shape:nth-child(1) {
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, rgba(24, 61, 61, 0.6), transparent);
    top: 10%;
    left: 10%;
    animation-duration: 6s;
    animation-delay: 0s;
  }

  .shape:nth-child(2) {
    width: 200px;
    height: 200px;
    background: radial-gradient(circle, rgba(92, 131, 116, 0.6), transparent);
    top: 60%;
    left: 70%;
    animation-duration: 5s;
    animation-delay: -1.5s;
  }

  .shape:nth-child(3) {
    width: 250px;
    height: 250px;
    background: radial-gradient(circle, rgba(147, 177, 166, 0.5), transparent);
    top: 80%;
    left: 20%;
    animation-duration: 7s;
    animation-delay: -3.5s;
  }

  .shape:nth-child(4) {
    width: 180px;
    height: 180px;
    background: radial-gradient(circle, rgba(92, 131, 116, 0.5), transparent);
    top: 30%;
    left: 80%;
    animation-duration: 5.5s;
    animation-delay: -2.5s;
  }

  .shape:nth-child(5) {
    width: 220px;
    height: 220px;
    background: radial-gradient(circle, rgba(147, 177, 166, 0.5), transparent);
    top: 40%;
    left: 40%;
    animation-duration: 6.5s;
    animation-delay: -1s;
  }

  .shape:nth-child(6) {
    width: 160px;
    height: 160px;
    background: radial-gradient(circle, rgba(24, 61, 61, 0.6), transparent);
    top: 15%;
    left: 60%;
    animation-duration: 4.5s;
    animation-delay: -3s;
  }

  .shape:nth-child(7) {
    width: 280px;
    height: 280px;
    background: radial-gradient(circle, rgba(92, 131, 116, 0.4), transparent);
    top: 70%;
    left: 50%;
    animation-duration: 7.5s;
    animation-delay: -4s;
  }

  .shape:nth-child(8) {
    width: 190px;
    height: 190px;
    background: radial-gradient(circle, rgba(147, 177, 166, 0.6), transparent);
    top: 50%;
    left: 15%;
    animation-duration: 5.5s;
    animation-delay: -2s;
  }

  .distortion-layer {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image:
      repeating-radial-gradient(circle at 30% 30%, transparent 0, transparent 10px, rgba(255, 255, 255, 0.03) 10px, rgba(255, 255, 255, 0.03) 20px);
    animation: distortion-rotate 15s linear infinite;
    mix-blend-mode: overlay;
  }

  .title-container {
    z-index: 10;
    text-align: center;
    color: #93B1A6;
    text-shadow:
      0 0 10px rgba(92, 131, 116, 0.8),
      0 0 20px rgba(147, 177, 166, 0.6),
      0 0 30px rgba(24, 61, 61, 0.4),
      3px 3px 0 rgba(24, 61, 61, 0.4),
      -3px -3px 0 rgba(92, 131, 116, 0.4);
    animation: title-glitch 5s ease-in-out infinite;
    letter-spacing: 0.1em;
  }

  .psychosis-title {
    font-size: 6rem;
    font-weight: 900;
    text-transform: uppercase;
  }

  .psychosis-subtitle {
    font-size: 20px;
  }

  .scroll-button {
    margin-top: 3rem;
    padding: 1rem 2rem;
    background: rgba(92, 131, 116, 0.2);
    border: 2px solid rgba(147, 177, 166, 0.6);
    border-radius: 50px;
    color: #93B1A6;
    font-size: 1rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow:
      0 0 20px rgba(92, 131, 116, 0.4),
      inset 0 0 20px rgba(147, 177, 166, 0.1);
    animation: button-pulse 3s ease-in-out infinite;
  }

  .scroll-button:hover {
    background: rgba(92, 131, 116, 0.4);
    border-color: rgba(147, 177, 166, 0.9);
    box-shadow:
      0 0 30px rgba(92, 131, 116, 0.8),
      inset 0 0 30px rgba(147, 177, 166, 0.2);
    transform: translateY(-2px);
  }

  @keyframes button-pulse {
    0%, 100% {
      box-shadow:
        0 0 20px rgba(92, 131, 116, 0.4),
        inset 0 0 20px rgba(147, 177, 166, 0.1);
    }
    50% {
      box-shadow:
        0 0 30px rgba(92, 131, 116, 0.6),
        inset 0 0 30px rgba(147, 177, 166, 0.2);
    }
  }

  @media (max-width: 1280px) {
    .psychosis-title {
      font-size: 36px;
      word-break: keep-all;
    }
  }

  @keyframes psychosis-pulse {
    0%, 100% {
      transform: scale(1) rotate(0deg);
      opacity: 1;
    }
    25% {
      transform: scale(1.1) rotate(2deg);
      opacity: 0.8;
    }
    50% {
      transform: scale(0.95) rotate(-2deg);
      opacity: 0.9;
    }
    75% {
      transform: scale(1.05) rotate(1deg);
      opacity: 0.85;
    }
  }

  @keyframes psychosis-spiral {
    0% {
      transform: rotate(0deg) scale(1);
    }
    100% {
      transform: rotate(360deg) scale(1.2);
    }
  }

  @keyframes glitch-scan {
    0% {
      transform: translateY(0);
    }
    100% {
      transform: translateY(4px);
    }
  }

  @keyframes float-shape {
    0% {
      transform: translate(0, 0) scale(1) rotate(0deg);
      opacity: 0.6;
    }
    25% {
      transform: translate(150px, -150px) scale(1.4) rotate(360deg);
      opacity: 0.8;
    }
    50% {
      transform: translate(0, -300px) scale(0.6) rotate(720deg);
      opacity: 0.4;
    }
    75% {
      transform: translate(-150px, -150px) scale(1.4) rotate(1080deg);
      opacity: 0.8;
    }
    100% {
      transform: translate(0, 0) scale(1) rotate(1440deg);
      opacity: 0.6;
    }
  }

  @keyframes distortion-rotate {
    0% {
      transform: rotate(0deg) scale(1);
    }
    50% {
      transform: rotate(180deg) scale(1.3);
    }
    100% {
      transform: rotate(360deg) scale(1);
    }
  }

  @keyframes title-glitch {
    0%, 90%, 100% {
      transform: translate(0, 0) skew(0deg);
      filter: hue-rotate(0deg);
    }
    92% {
      transform: translate(-5px, 2px) skew(-2deg);
      filter: hue-rotate(90deg);
    }
    94% {
      transform: translate(5px, -2px) skew(2deg);
      filter: hue-rotate(-90deg);
    }
    96% {
      transform: translate(-2px, -3px) skew(1deg);
      filter: hue-rotate(180deg);
    }
  }
</style>

<header class="psychosis-container">
  <div class="psychosis-bg"></div>
  <div class="glitch-overlay"></div>
  <div class="floating-shapes">
    <div class="shape"></div>
    <div class="shape"></div>
    <div class="shape"></div>
    <div class="shape"></div>
    <div class="shape"></div>
    <div class="shape"></div>
    <div class="shape"></div>
    <div class="shape"></div>
  </div>
  <div class="distortion-layer"></div>

  <hgroup class="title-container">
    <h1 class="psychosis-title">{{title}}</h1>
    <p class="psychosis-subtitle">{{custom_excerpt}}</p>
    <button class="scroll-button" onclick="window.scrollTo({ top: window.innerHeight, behavior: 'smooth' })">
      Enter
    </button>
  </hgroup>
</header>
