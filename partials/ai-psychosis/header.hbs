<style>
  .psychosis-container {
    position: relative;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    background: #040D12;
    z-index: 1;
    margin-bottom: 2rem;
  }

  .psychosis-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background:
      radial-gradient(circle at 20% 50%, rgba(24, 61, 61, 0.4) 0%, transparent 50%),
      radial-gradient(circle at 80% 50%, rgba(92, 131, 116, 0.3) 0%, transparent 50%),
      radial-gradient(circle at 50% 50%, rgba(147, 177, 166, 0.2) 0%, transparent 50%);
    animation: psychosis-pulse 8s ease-in-out infinite;
  }

  .glitch-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: repeating-linear-gradient(
      0deg,
      rgba(24, 61, 61, 0.03) 0px,
      rgba(92, 131, 116, 0.02) 1px,
      rgba(147, 177, 166, 0.03) 2px,
      transparent 3px,
      transparent 4px
    );
    animation: glitch-scan 0.3s linear infinite;
    pointer-events: none;
  }

  .floating-shapes {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .shape {
    position: absolute;
    opacity: 0.6;
    filter: blur(3px);
    animation: float-shape 20s ease-in-out infinite;
    border-radius: 50%;
  }

  .shape:nth-child(1) {
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, rgba(24, 61, 61, 0.6), transparent);
    top: 10%;
    left: 10%;
    animation-duration: 12s;
    animation-delay: 0s;
  }

  .shape:nth-child(2) {
    width: 200px;
    height: 200px;
    background: radial-gradient(circle, rgba(92, 131, 116, 0.6), transparent);
    top: 60%;
    left: 70%;
    animation-duration: 10s;
    animation-delay: -3s;
  }

  .shape:nth-child(3) {
    width: 250px;
    height: 250px;
    background: radial-gradient(circle, rgba(147, 177, 166, 0.5), transparent);
    top: 80%;
    left: 20%;
    animation-duration: 14s;
    animation-delay: -7s;
  }

  .shape:nth-child(4) {
    width: 180px;
    height: 180px;
    background: radial-gradient(circle, rgba(92, 131, 116, 0.5), transparent);
    top: 30%;
    left: 80%;
    animation-duration: 11s;
    animation-delay: -5s;
  }

  .shape:nth-child(5) {
    width: 220px;
    height: 220px;
    background: radial-gradient(circle, rgba(147, 177, 166, 0.5), transparent);
    top: 40%;
    left: 40%;
    animation-duration: 13s;
    animation-delay: -2s;
  }

  .shape:nth-child(6) {
    width: 160px;
    height: 160px;
    background: radial-gradient(circle, rgba(24, 61, 61, 0.6), transparent);
    top: 15%;
    left: 60%;
    animation-duration: 9s;
    animation-delay: -6s;
  }

  .shape:nth-child(7) {
    width: 280px;
    height: 280px;
    background: radial-gradient(circle, rgba(92, 131, 116, 0.4), transparent);
    top: 70%;
    left: 50%;
    animation-duration: 15s;
    animation-delay: -8s;
  }

  .shape:nth-child(8) {
    width: 190px;
    height: 190px;
    background: radial-gradient(circle, rgba(147, 177, 166, 0.6), transparent);
    top: 50%;
    left: 15%;
    animation-duration: 11s;
    animation-delay: -4s;
  }

  .distortion-layer {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image:
      repeating-radial-gradient(circle at 30% 30%, transparent 0, transparent 10px, rgba(255, 255, 255, 0.03) 10px, rgba(255, 255, 255, 0.03) 20px);
    animation: distortion-rotate 30s linear infinite;
    mix-blend-mode: overlay;
  }

  .title-container {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 10;
    text-align: center;
  }

  .psychosis-title {
    font-size: 6rem;
    font-weight: 900;
    color: #93B1A6;
    text-shadow:
      0 0 10px rgba(92, 131, 116, 0.8),
      0 0 20px rgba(147, 177, 166, 0.6),
      0 0 30px rgba(24, 61, 61, 0.4),
      3px 3px 0 rgba(24, 61, 61, 0.4),
      -3px -3px 0 rgba(92, 131, 116, 0.4);
    animation: title-glitch 5s ease-in-out infinite;
    letter-spacing: 0.1em;
    text-transform: uppercase;
  }

  @keyframes psychosis-pulse {
    0%, 100% {
      transform: scale(1) rotate(0deg);
      opacity: 1;
    }
    25% {
      transform: scale(1.1) rotate(2deg);
      opacity: 0.8;
    }
    50% {
      transform: scale(0.95) rotate(-2deg);
      opacity: 0.9;
    }
    75% {
      transform: scale(1.05) rotate(1deg);
      opacity: 0.85;
    }
  }

  @keyframes glitch-scan {
    0% {
      transform: translateY(0);
    }
    100% {
      transform: translateY(4px);
    }
  }

  @keyframes float-shape {
    0%, 100% {
      transform: translate(0, 0) scale(1) rotate(0deg);
      opacity: 0.6;
    }
    20% {
      transform: translate(100px, -120px) scale(1.3) rotate(144deg);
      opacity: 0.8;
    }
    40% {
      transform: translate(-80px, -200px) scale(0.8) rotate(288deg);
      opacity: 0.5;
    }
    60% {
      transform: translate(-150px, -100px) scale(1.2) rotate(432deg);
      opacity: 0.7;
    }
    80% {
      transform: translate(60px, -180px) scale(0.9) rotate(576deg);
      opacity: 0.6;
    }
  }

  @keyframes distortion-rotate {
    0% {
      transform: rotate(0deg) scale(1);
    }
    50% {
      transform: rotate(180deg) scale(1.2);
    }
    100% {
      transform: rotate(360deg) scale(1);
    }
  }

  @keyframes title-glitch {
    0%, 90%, 100% {
      transform: translate(0, 0) skew(0deg);
      filter: hue-rotate(0deg);
    }
    92% {
      transform: translate(-5px, 2px) skew(-2deg);
      filter: hue-rotate(90deg);
    }
    94% {
      transform: translate(5px, -2px) skew(2deg);
      filter: hue-rotate(-90deg);
    }
    96% {
      transform: translate(-2px, -3px) skew(1deg);
      filter: hue-rotate(180deg);
    }
  }
</style>

<header class="psychosis-container">
  <div class="psychosis-bg"></div>
  <div class="glitch-overlay"></div>
  <div class="floating-shapes">
    <div class="shape"></div>
    <div class="shape"></div>
    <div class="shape"></div>
    <div class="shape"></div>
    <div class="shape"></div>
    <div class="shape"></div>
    <div class="shape"></div>
    <div class="shape"></div>
  </div>
  <div class="distortion-layer"></div>

  <div class="title-container">
    <h1 class="psychosis-title">{{title}}</h1>
  </div>
</header>
