{{!< default}}
{{!-- The tag above means: insert everything in this file into the body of the default.hbs template --}}


{{#post}}

{{> "ai-psychosis/styles"}}
{{> "ai-psychosis/pull-quote"}}
{{> "ai-psychosis/checklist"}}
{{> "ai-psychosis/messages"}}
<main class="gh-main aipsy-main">
  <article class="gh-article">
    {{> "ai-psychosis/header"}}
    <section class="gh-content gh-canvas is-body">
      {{content}}
    </section>

      <section class="messages-section">
        <div class="messages-container">
          <div class="date-divider">Today 2:47 PM</div>

          <div class="message received">
            <div class="avatar">AS</div>
            <div class="message-content">
              <div class="message-name">Alex Smith</div>
              <div class="message-bubble">
                Hey, how are you doing?
              </div>
            </div>
          </div>

          <div class="message sent">
            <div class="message-content">
              <div class="message-name">Collin</div>
              <div class="message-bubble">I'm good! How about you?</div>
            </div>
            <div class="avatar">C</div>
          </div>

          <div class="message received">
            <div class="avatar">AS</div>
            <div class="message-content">
              <div class="message-bubble">Pretty good, just working on some stuff</div>
            </div>
          </div>

          <div class="date-divider">Today 6:23 PM</div>

          <div class="message sent">
            <div class="message-content">
              <div class="message-bubble">That's great! Let me know if you need anything</div>
            </div>
            <div class="avatar">C</div>
          </div>

          <div class="message received">
            <div class="avatar">AS</div>
            <div class="message-content">
              <div class="message-bubble">Will do, thanks!</div>
            </div>
          </div>
        </div>
      </section>
  </article>
</main>
{{/post}}
